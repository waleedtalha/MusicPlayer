<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- set default font-->
        <item name="android:textViewStyle">@style/PoppinsFont</item>
    </style>

    <style name="PoppinsFont" parent="android:Widget.TextView">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="MaterialAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog" />

    <style name="AppNameText">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="NormalText">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AlbumNameText">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImagesCountText">
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextTabMusic">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <!-- bottom sheet style-->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_bg</item>
    </style>

    <!-- Search-Edit-Text Style -->
    <style name="SearchEditTextStyle" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:background">@drawable/search_edit_text</item>
        <item name="android:focusable">true</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawableEnd">@drawable/ic_simple_search</item>
        <item name="android:drawable">@dimen/padding_15</item>
    </style>

    <style name="TabLayoutBg">
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="CurrentTrackBg">
        <item name="background">@color/white</item>
    </style>

    <style name="BackIcon">
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <style name="MenuIcon">
        <item name="android:src">@drawable/ic_menu</item>
    </style>

    <style name="SimpleMenuIcon">
        <item name="android:src">@drawable/ic_menu_more</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="FavouriteIcon">
        <item name="android:src">@drawable/ic_favorite_border</item>
    </style>

    <style name="AddIcon">
        <item name="android:src">@drawable/ic_add</item>
    </style>

    <style name="ShuffleIcon">
        <item name="android:src">@drawable/ic_shuffle</item>
    </style>

    <style name="PreviousIcon">
        <item name="android:src">@drawable/ic_previous</item>
    </style>

    <style name="NextIcon">
        <item name="android:src">@drawable/ic_next</item>
    </style>

    <style name="RefreshIcon">
        <item name="android:src">@drawable/ic_repeat</item>
    </style>

    <style name="ContentTextBlack" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="ButtonText">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--    popup theme-->
    <style name="popUpMenuMain" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="popupMenuBackground">@drawable/rounded_menus</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.MusicPlayer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
</resources>